<html>

<head>
    <title>@ViewData["Title"] - Minha App Modelo</title>

    @*<link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />*@
    <link href="~/lib/bootstrap/css/bootstrap-grid.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/css/bootstrap-reboot.css" rel="stylesheet" />
    <link href="~/css/site_bundle.min.css" rel="stylesheet" />
    <!--
        Posteriormente, incluir os Enviroment Include/Exclude
    -->
</head>

<body>
    <header>

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AppModelo</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Produtos" asp-controller="Cadastro" asp-action="Index">Cadastro de Produto</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Vendas" asp-controller="Pedidos" asp-action="Index">Pedidos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Injecoes" asp-action="Index">Injeções</a>
                    </li>
                </ul>
            </div>
        </nav>

    </header>

    @RenderBody()

    <footer class="border-top footer text-muted">
        <div class="container">

            Minha App - <email>Contato</email> <span> | </span> <email email-domain="teste.io">Suporte</email> <span> | </span> <email>Atendimento</email>

        </div>
    </footer>

    @*<script src="~/lib/jquery/jquery.js"></script>*@
    <script src="~/lib/jquery-validate/localization/methods_pt.js"></script>
    <script src="~/lib/jquery-validate/additional-methods.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/js/site_bundle.min.js"></script>
    <!--
        Posteriormente, incluir os Enviroment Include/Exclude
    -->

</body>
</html>